<h2>All Game Ideas</h2>
<div class="list-all-games">
  <% @games.each do |game| %>
    <span class="title"><%= link_to game.last_revision.name, game %></span><br>
    <span class="creator"> created by <%= game.creator.username %> on <%= game.standard_created_at %></span><br>
    <span class="blurb"><%= truncate(game.last_revision.text_description, length: 200) %></span><br>
  <% end %>
</div>
